@using Emigrace.Models
@model SearchViewModel

<section class="brand">
    <div class="container">
        <div class="row">
            <h1>Emigrace / Imigrace</h1>
            <p class="lead">@Resource.lead</p>
        </div>
    </div>
</section>
<hr />
<section class="main-body">
        <div class="row">
            <div class="col-sm-12 col-md-7">
                <div class="jumbotron">
                    <p>@Resource.search</p>
                    <br />
                    <form class="form-horizontal" action="@Url.Action("Index", "Search")" role="form" method="get" >

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="name">@Resource.name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x=>x.Name, new { @class = "form-control"} )
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="familyname">@Resource.lastname</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x=>x.LastName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="pwd">@Resource.place</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Place, new { @class = "form-control", placeholder = Resource.placeplaceholder})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="pwd">@Resource.source</label>
                            <div class="col-sm-10">
                                <div class="select-form">
                                    <div class="input-group-lg source">
                                        @Html.DropDownListFor(m => m.SourceId, Dropdown.Sources, new { @class = "form-control"})
                                        @Html.ValidationMessageFor(m => m.SourceId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                                <div class="col-sm-offset-2">
                                    <button type="submit" class="btn btn-default btn-terracotta">@Resource.find</button>
                                </div>
                    </form>

                    </div>
                </div>
            
            <div class="col-sm-12 col-md-4">
               
                  
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img src="~/Content/emigro1.jpg" alt="Chania" width="460" height="345">
                            </div>

                            <div class="item">
                                <img src="~/Content/emigro2.jpg" alt="Chania" width="460" height="345">
                            </div>

                            <div class="item">
                                <img src="~/Content/emigro3.jpg" alt="Flower" width="460" height="345">
                            </div>

                            </div>

                    </div>
                </div>
          
  </div>
    
</section>
